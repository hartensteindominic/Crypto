    <!-- Web3 Integration Script -->
    <script>
        const recipientAddress = '0x02f93c7547309ca50EEAB446DaEBE8ce8E694cBb';
        let web3;
        let userAccount;

        const connectWalletBtn = document.getElementById('connect-wallet');
        const sendTxBtn = document.getElementById('send-transaction');
        const amountInput = document.getElementById('amount');
        const walletStatus = document.getElementById('wallet-status');
        const txStatus = document.getElementById('tx-status');

        connectWalletBtn.addEventListener('click', async () => {
            if (window.ethereum) {
                try {
                    web3 = new Web3(window.ethereum);
                    const accounts = await ethereum.request({ method: 'eth_requestAccounts' });
                    userAccount = accounts[0];
                    walletStatus.textContent = `Connected: ${userAccount.slice(0, 6)}...${userAccount.slice(-4)}`;
                    sendTxBtn.disabled = false;
                    connectWalletBtn.textContent = 'Wallet Connected';
                    connectWalletBtn.disabled = true;
                } catch (error) {
                    walletStatus.textContent = 'Connection failed: ' + error.message;
                }
            } else {
                walletStatus.textContent = 'Please install MetaMask or another Ethereum wallet.';
            }
        });

        sendTxBtn.addEventListener('click', async () => {
            const amount = amountInput.value;
            if (!amount || parseFloat(amount) <= 0) {
                txStatus.textContent = 'Please enter a valid amount.';
                return;
            }
            const weiAmount = web3.utils.toWei(amount, 'ether');

            try {
                txStatus.textContent = 'Sending transaction...';
                const tx = await web3.eth.sendTransaction({
                    from: userAccount,
                    to: recipientAddress,
                    value: weiAmount
                });
                txStatus.textContent = `Transaction successful! Hash: ${tx.transactionHash}`;
            } catch (error) {
                txStatus.textContent = 'Transaction failed: ' + error.message;
            }
        });
    </script>
