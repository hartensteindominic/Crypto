// Deposit artwork, pay fee, and get "Borrowing Power"
function depositArt(address nftContract, uint256 tokenId) external payable {
    require(msg.value >= 0.001 ether, "Fee required"); // Base fees are cheap!
    
    // Transfer NFT to this contract as collateral
    IERC721(nftContract).transferFrom(msg.sender, address(this), tokenId);
    
    // Logic: If pool is 100 ETH, maybe let them borrow 0.5 ETH
    uint256 maxLoan = calculateMaxLoan(nftContract, tokenId);
    borrowableAmount[msg.sender] += maxLoan;
}
